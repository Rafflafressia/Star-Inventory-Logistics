<section>
  <form
    class="background m-auto px-28 bg-gray-500 add-product-form"
    enctype="multipart/form-data"
  >

    <div class="grid grid-cols-2 m-3">
      <div class="col-md-3 add-product-input">
        <label for="new-product-name">Product Name:</label><br />
        <input type="text" id="new-product-name" name="new-product-name" />
      </div>

      <div class="col-md-3 add-product-input">
        <label for="new-product-price">Product Price:</label><br />
        <input type="text" id="new-product-price" name="new-product-price" />
      </div>

      <div class="col-md-3 add-product-input">
        <label for="new-product-stock">Product Stock:</label><br />
        <input type="text" id="new-product-stock" name="new-product-stock" />
      </div>

      <div class="col-md-4 add-product-input">
        <label for="new-category-id">Category Name:</label><br />
        <input type="text" id="new-category-id" name="new-category-id" />
      </div>
      <div class="col">

        <div class="add-product-input">
          <label for="new-product-image">Product Image URL:</label><br />
          <input type="text" id="new-product-image" name="new-product-image" />
        </div>
      </div>

      <div class="add-product-input">
        <label for="local-product-image">Local Product Image:</label><br />
        <input
          type="file"
          name="image"
          id="local-product-image"
          accept="image/*"
        />
      </div>

      <div class="col-4 add-product-input">
        <label for="new-product-description">Product Description:</label><br />
        <input
          type="text"
          id="new-product-description"
          name="new-product-description"
        />
      </div>
    </div>

    <div class="justify-content-center mx-[20px]">
      <button class="btn btn-primary add-new-product-btn bg-blue-600 hover:bg-blue-800 text-white" type="submit">Add New
        Product</button>
    </div>
  </form>
</section>

{{! modal for status }}
<div class="modal-window mx-[725px] top-[100px] rounded-2xl" id="employee-modal-title">
  <div
    class="modal-content flex flex-col justify-center items-center bg-blue-900 text-white z-50 w-[400px] h-[200px] p-4 rounded-2xl"
  >
    <div class="modal-header">
      <h2
        class="modal-title m-4 text-center text-2xl font-bold"
        id="exampleModalToggleLabel"
      >Modal 1</h2>
    </div>
    <span class="modal-body py-2 text-center">
      Show a second modal and hide this one with the button below.
    </span>
  </div>
</div>

<a
  class="btn btn-primary pop-up hidden"
  data-bs-toggle="modal"
  href="#exampleModalToggle"
  role="button"
>Create Successfully</a>

<script src="/js/addNewProduct.js"></script>